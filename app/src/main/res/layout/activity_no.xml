<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".NoActivity">
    <Button
        android:id="@+id/changeFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tekan untuk cari dengan Judul"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:onClick="changeFilter"
        android:layout_marginBottom="5dp"

        />
    <EditText android:id="@+id/noSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionSearch"
        android:inputType="number"
        android:hint="Masukkan No dan Enter"
        android:background="@drawable/kota"
        android:padding="10dp"
        android:drawableEnd="@drawable/search_icon"/>

    <WebView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/webDodingNo"
        ></WebView>
</LinearLayout>