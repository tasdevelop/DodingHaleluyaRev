<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context=".JudulActivity">
    <Button
        android:id="@+id/changeFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tekan untuk cari dengan Nomor"
        android:background="@drawable/button"
        android:textColor="@color/white"
        android:onClick="changeFilter"
        android:layout_marginBottom="5dp"

        />
    <EditText android:id="@+id/noSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:hint="Masukkan Min 3 karakter"
        android:background="@drawable/kota"
        android:padding="10dp"
        android:singleLine="true"
        android:drawableEnd="@drawable/search_icon"/>
    <ListView
        android:id="@+id/listNya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>